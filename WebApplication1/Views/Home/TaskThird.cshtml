@{
    ViewData["Title"] = "Оставить заявку";
}

<div id="wrapper">
	<div class="container">

		<!-- start: Contact Info -->
		<div class="span6">
			<div class="title"><h3>Контакты</h3></div>
			<p>
				<b>Акцент на результат</b>
			</p>
			<p>
				Пн-Пт: 9:00-19:00
			</p>
			<p>
				ул. Мухамедьярова 31А, 3 этаж, оф. 301-305
			</p>
			<p>
				8 843 207-11-58
			</p>
			<p>
				my@aaccent.ru
			</p>
			<p>
			</p>
			<p>
				Оставьте заявку на бесплатную консультацию!
			</p>
		</div>
		<!-- end: Contact Info -->
		<!-- start: Contact Form -->
		<div class="span4">
			<div class="title"><h3>Оставить заявку</h3></div>

			<!-- start: Contact Form -->
			<div id="contact-form">

				<form method="post" name="contactForm" id="contactForm">
					<fieldset>
						<div class="group"><input name="contactName" type="text" id="contactName" placeholder="Имя" value="" minLength="2" required /></div>
						<div><input name="contactNumber" type="text" id="contactNumber" placeholder="Телефон" value="" minLength="2" required /></div>
						<label>Выберите время для звонка:</label>
						<div class="form_radio_btn">
							<input id="radio-1" type="radio" name="radio" value="1" checked>
							<label for="radio-1">10:00-13:00</label>
						</div>

						<div class="form_radio_btn">
							<input id="radio-2" type="radio" name="radio" value="2">
							<label for="radio-2">13:00-16:00</label>
						</div>

						<div class="form_radio_btn">
							<input id="radio-3" type="radio" name="radio" value="3">
							<label for="radio-3">16:00-19:00</label>
						</div>
						<input type="submit" name="type" value="Отправить" />
					</fieldset>
				</form>
			</div>

		</div>
		<div class="span6">
			<div class="title"><h3>Проверить статус</h3></div>

			<div id="contact-form">

				<form method="post" name="contactForm1" id="contactForm1">
					<fieldset>
						<div><input name="contactNumber" type="text" id="contactNumber" placeholder="Телефон" value="" minLength="2" required /></div>
						<input type="submit" name="type" value="Узнать" />
						<br />
						<b><h3>@ViewBag.H</h3></b>
					</fieldset>
				</form>
			</div>
		</div>

		<div>
			<img src="~/img/map.png">
		</div>
	</div>

</div>
	<link href="~/css/bootstrap.css" rel="stylesheet">
	<link href="~/css/style.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Droid+Sans:400,80">
